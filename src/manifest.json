{
  "manifest_version": 2,
  "name": "FoxAuth Authenticator",
  "short_name": "FoxAuth",
  "homepage_url": "https://github.com/FoxAuth/FoxAuth/",
  "version": "1.4.12",
  "description": "A Firefox authenticator that can autofill TOTP codes with Firefox Android support",
  "applications": {
    "gecko": {
      "id": "foxauth@foxauth",
      "strict_min_version": "66.0"
    }
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "FoxAuth 1.4.12",
    "default_popup": "options/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "page": "options/background.html"
  },
  "sidebar_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "FoxAuth Authenticator",
    "default_panel": "options/popup.html",
    "open_at_install":false
  },
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "notifications",
    "contextualIdentities",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://account.ubisoft.com/*", "https://connect.ubisoft.com/*"],
      "js": [
        "scripts/content/autofill.js"
      ],
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/content/autofill.js"
      ]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
          "default": "F8"
      },
      "description": "Open popup"
    },
    "open-popup-in-sidebar": {
      "suggested_key": {
        "default": "F3"
    },
    "description": "Open popup in Firefox sidebar"
    }
  },
  "default_locale": "en"
}