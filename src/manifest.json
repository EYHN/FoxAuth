{
  "manifest_version": 2,
  "name": "FoxAuth Authenticator",
  "short_name": "FoxAuth",
  "homepage_url": "https://github.com/FoxAuth/FoxAuth/",
  "version": "1.4.8",
  "description": "A Firefox authenticator that can autofill TOTP codes with Firefox Android support",
  "applications": {
    "gecko": {
      "id": "foxauth@foxauth",
      "strict_min_version": "66.0"
    }
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "FoxAuth 1.4.7",
    "default_popup": "options/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "page": "options/background.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "notifications",
    "contextualIdentities",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/content/autofill.js"
      ]
    }
  ],
  "commands": {
    "fillKeyToActiveEl": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Fill OTP code to input field"
    },
    "_execute_browser_action": {
      "suggested_key": {
          "default": "F11"
      },
      "description": "Open popup"
    }
  }
}